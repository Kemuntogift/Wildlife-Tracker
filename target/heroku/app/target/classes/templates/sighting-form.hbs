{{#partial "content"}}
    <div id="hero" class="card">
        <img src="/images/lions2.jpg" class="img-fluid ">
        <div class="card-img-overlay   d-flex flex-column align-items-center justify-content-center">

            <div class="hero-text form text-center">
                <form class="form" action="/sighting" method="post">
                        <h1>Create Sighting</h1>
                        <input type="text" placeholder="Animal Name" name="animal" required><br>

                        <input type="text" placeholder="Ranger" name="ranger" required><br>
                    <div class="form-group ">
                        <select id="location" name="location"  class="form-control">
                            <option >Location</option>
                            <option value="Langata">Langata</option>
                            <option value="Mashambani">Mashambani</option>
                            <option value="Area 51">Area 51</option>
                        </select>
                        <label for="inputState">Location</label>
                        <div class="line"></div>
                    </div>
                    <div class="form-group ">
                        <select id="health" name="health" class="form-control">
                            <option >Health</option>
                            <option value="health">Healthy</option>
                            <option value="ill">Ill</option>
                            <option value="okay ">Okay</option>
                        </select>
                        <label for="inputState">Health Status</label>
                        <div class="line"></div>
                    </div>
                    <div class="form-row row">
                        <div class="form-group col-md-6">
                            <select id="age" name="age" class="form-control">
                                <option value="newborn">Newborn</option>
                                <option value="young">Young</option>
                                <option value="adult">Adult</option>
                            </select>
                            <label for="inputState">Age</label>
                            <div class="line"></div>
                        </div>
                        <div class="form-group col-md-6">
                            <select id="type" name="type" class="form-control">
                                <option >Animal Type</option>
                                <option value="animal">Normal Animal</option>
                                <option value="endangered">Endangered Animal</option>
                            </select>
                            <label for="inputState">Animal Type</label>
                            <div class="line"></div>
                        </div>

                        <button class="btn btn-success mx-auto d-block submit" id="submitButton" value="submit" type="submit">submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}